
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br/>
<br/>

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>

<br/>
<br/>

@if (Model.Count() > 0)
{
    <table>
        
        <thead>
            <tr>code</tr>
            <tr>name</tr>
            <tr>date</tr>
            <tr>details</tr>
            <tr>update</tr>
            <tr>delete</tr>
        </thead>

    </table>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.DateOfCreation</td>
                <td>
                    <a asp-controller="Department" asp-action="details" asp-route="@item.ID" class="btn btn-warning">
                        <i class="fas fa-eye"></i>details
                    </a>
                </td>
                <td>
                    <a asp-controller="Department" asp-action="edit" asp-route="@item.ID" class="btn btn-success">
                        <i class="fas fa-edit"></i>edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Department" asp-action="delete" asp-route="@item.ID" class="btn btn-danger">
                        <i class="fas fa-trash"></i>details
                    </a>
                </td>
            </tr>
        }
        
    </tbody>
}
else
{
    <h4>No Departments Found</h4>
}

