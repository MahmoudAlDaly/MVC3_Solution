@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="alert alert-info">

@ViewData["Message"]

</div>

<div class="alert alert-dark">
    @ViewBag.Message
</div>

<h1>All Employees</h1>

<br/>
<br/>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add New Employee</a>

<br/>
<br/>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>name</th>
                <th>age</th>
                @* <th>address</th> *@
                <th>salary</th>
                <th>Email</th>
                 @* <th>PhoneNumber</th> *@
                 @* <th>HireDate</th> *@
                <th>Gender</th>
                @* <th>EmpType</th> *@
                 <th>isActive</th>
                <th>details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    @* <td>@item.Address</td> *@
                    <td>@Html.DisplayFor(m=> item.Salary)</td>
                    <td>@Html.DisplayFor(m=>item.Email)</td>
                    @* <td>@item.PhoneNumber</td> *@
                    @* <td>@item.HireDate</td> *@
                    <td>@item.Gender</td>
                    @* <td>@item.EmpType</td> *@
                    <td>@Html.DisplayFor(m=>item.IsActive)</td>

                    <partial name="_ButtonsCRUDPartial" model="@item.ID" />
                </tr>
            }

        </tbody>

    </table>


}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>No Employees Found</h3>
    </div>

}