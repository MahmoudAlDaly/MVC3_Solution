@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<br/>
<br/>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add New Employee</a>

<br/>
<br/>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>name</th>
                <th>age</th>
                @* <th>address</th> *@
                <th>salary</th>
                <th>Email</th>
                <th>salary</th>
                 @* <th>PhoneNumber</th> *@
                 @* <th>HireDate</th> *@
                <th>Gender</th>
                @* <th>EmpType</th> *@
                 <th>isActive</th>
                <th>details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>
                    <td>@Html.DisplayFor(m=> item.Salary)</td>
                    <td>@Html.DisplayFor(m=>item.Email)</td>
                    @* <td>@item.PhoneNumber</td> *@
                    @* <td>@item.HireDate</td> *@
                    <td>@item.Gender</td>
                    @* <td>@item.EmpType</td> *@
                    <td>@Html.DisplayFor(m=>item.IsActive)</td>
                    <td>
                        <a asp-controller="Employee" asp-action="details" asp-route-id="@item.ID" class="btn btn-warning">
                            <i class="fas fa-eye"></i>details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="edit" asp-route-id="@item.ID" class="btn btn-success">
                            <i class="fas fa-edit"></i>edit
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>


}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>No Employees Found</h3>
    </div>

}