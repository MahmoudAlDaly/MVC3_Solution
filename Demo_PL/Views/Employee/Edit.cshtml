@model Employee
@{
    ViewData["Title"] = "Employee Edit";
}

<h1>Edit Employee</h1>

<br />
<br />

<form asp-asp-controller="Employee" asp-action="Edit" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="PartialViews/CreateEditEmployeePartial" />
    <br/>
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-dark">Cancel</a>

</form>


